@model K_12.WEB.Models.GradeViewModel


<text>
    <script>
        $(function () {
            // yay!
            setProgress(0)
        });
       
        function grade_selected(e) {
            var value = $("#ID").val();


            $.get('/Application/GradeInfo/' + value, function (data) {


                $('#partialPlaceHolder').html(data);

                $('#partialPlaceHolder').fadeIn('slow');
            });

        }

    </script>
</text>



